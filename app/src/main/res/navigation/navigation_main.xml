<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@+id/contactsList">

    <fragment
        android:id="@id/contactsList"
        android:name="com.coherentsolutions.lab.contacts.ui.ContactsListFragment"
        tools:layout="@layout/fragment_contacts_list">

        <action android:id="@+id/contactsListToDetails"
            app:destination="@id/contactDetails" />

    </fragment>

    <fragment android:id="@+id/contactDetails"
        android:name="com.coherentsolutions.lab.contacts.ui.ContactsDetailsFragment"
        tools:layout="@layout/fragment_contact_details">

        <argument android:name="contact"
            app:argType="com.coherentsolutions.lab.contacts.model.Contact"/>

    </fragment>

</navigation>